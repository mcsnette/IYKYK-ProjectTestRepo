<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer orange stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F69CD4" />
            <stroke android:color="#F69CD4" android:width="3dp" />
        </shape>
    </item>

    <!-- Inner white stroke with gradient -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Gradient inside the inner white stroke -->
    <item android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F69CD4"
                android:endColor="@android:color/white"
                android:angle="270" />
        </shape>
    </item>

</layer-list>
